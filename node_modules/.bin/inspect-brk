#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_inspect-brk@0.1.2@inspect-brk/bin/inspect-brk" "$@"
  ret=$?
else 
  node  "$basedir/../_inspect-brk@0.1.2@inspect-brk/bin/inspect-brk" "$@"
  ret=$?
fi
exit $ret
